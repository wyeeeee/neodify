{
  "name": "neodify",
  "version": "0.1.0",
  "private": true,
  "description": "基于 Claude Agent SDK 的 Agent 调度框架",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n web,server -c cyan,green \"npm run dev -w @neodify/web\" \"npm run dev -w @neodify/server\"",
    "start": "concurrently -n web,server -c cyan,green \"npm run preview -w @neodify/web -- --host 0.0.0.0 --port 4173\" \"npm run start -w @neodify/server\"",
    "dev:web": "npm run dev -w @neodify/web",
    "build:web": "npm run build -w @neodify/web",
    "test:web": "npm run test -w @neodify/web",
    "lint:web": "npm run lint -w @neodify/web",
    "dev:server": "npm run dev -w @neodify/server",
    "build:server": "npm run build -w @neodify/server",
    "test:server": "npm run test -w @neodify/server",
    "lint:server": "npm run lint -w @neodify/server",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
