{
  "name": "neodify",
  "version": "0.1.0",
  "private": true,
  "description": "基于 Claude Agent SDK 的 Agent 调度框架",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w @neodify/web",
    "build:web": "npm run build -w @neodify/web",
    "test:web": "npm run test -w @neodify/web",
    "lint:web": "npm run lint -w @neodify/web",
    "dev:server": "npm run dev -w @neodify/server",
    "build:server": "npm run build -w @neodify/server",
    "test:server": "npm run test -w @neodify/server",
    "lint:server": "npm run lint -w @neodify/server",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
